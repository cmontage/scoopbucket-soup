{
    "version": "8.1.5.101",
    "description": "百度网盘，百度公司推出的云存储服务",
    "homepage": "https://pan.baidu.com/download",
    "license": "Proprietary",
    "url": "http://issuecdn.baidupcs.com/issue/netdisk/yunguanjia/BaiduNetdisk_8.1.5.101.exe#dl.7z",
    "hash": "9ef9a47d7f0ea9ffc2d3b2985bd8aacde9c58d01d0db59e37fd5d307262bae3b",
    "bin": "BaiduNetdisk.exe",
    "shortcuts": [
        [
            "BaiduNetdisk.exe",
            "百度网盘"
        ]
    ],
    "persist": "users",
    "pre_install": [
        "Remove-Item \"$dir\\`$TEMP\" -Force -Recurse",
        "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
        "Remove-Item \"$dir\\AutoUpdate\\Autoupdate.exe\" -Force -Recurse"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Confirm-Action",
        "Stop-App"
    ],
    "post_uninstall": [
        "Write-Host (\"`nDeleting $env:APPDATA\\PLogs ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\PLogs\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"`nDeleting $env:APPDATA\\BaiduYunKernel ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\BaiduYunKernel\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"`nDeleting $env:APPDATA\\BaiduYunGuanjia ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\BaiduYunGuanjia\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"`nDeleting $env:APPDATA\\BaiduNetdisk ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\BaiduNetdisk\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"`nDeleting $env:APPDATA\\Baidu\\BaiduNetdisk ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\Baidu\\BaiduNetdisk\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"`nDeleting $env:APPDATA\\Baidu\\BaiduYunKernel ... \") -f DarkGray -NoNewline",
        "Remove-Item -Path \"$env:APPDATA\\Baidu\\BaiduYunKernel\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null"
    ],
    "checkver": {
        "url": "https://pan.baidu.com/disk/cmsdata?do=client",
        "regex": "BaiduNetdisk_(\\d+.\\d+.\\d+.\\d+).exe"
    },
    "autoupdate": {
        "url": "http://issuecdn.baidupcs.com/issue/netdisk/yunguanjia/BaiduNetdisk_$version.exe#dl.7z"
    }
}
