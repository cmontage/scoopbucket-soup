{
    "version": "2.5.4.0",
    "description": "123云盘是一款空间大、不限速、专注大文件传输分发的云存储服务产品。",
    "homepage": "https://www.123pan.com/",
    "license": "Proprietary",
    "url": "https://app.123957.com/pc-pro/windows/254/123pan_2.5.4.exe#/dl.7z",
    "hash": "b3c8d28727a2d98872ffbb5973d08ed1714eadf593296737acac4ebeac895fc1",
    "shortcuts": [
        [
            "123pan.exe",
            "123云盘"
        ]
    ],
    "pre_install": [
        "Expand-7zipArchive \"$dir\\app.7z\" \"$dir\" -Removal",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Write-Host (\"
Persisting $env:AppData\\Roaming\\123pan ... \") -NoNewline",
        "New-PersistDirectory \"$env:APPDATA\\123pan\" \"$persist_dir\\AppData\" -Migrate",
        "Remove-Item \"$dir\\`$*\" -Recurse -Force"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Confirm-Action",
        "Stop-App",
        "Write-Host (\"
Deleting $env:APPDATA\\123pan ... \") -f DarkGray -NoNewline",
        "Remove-Junction \"$env:APPDATA\\123pan\" -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"
Deleting $env:LOCALAPPDATA\\123pan-updater ... \") -f DarkGray -NoNewline",
        "Remove-Item \"$env:LOCALAPPDATA\\123pan-updater\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null"
    ],
    "checkver": {
        "script": [
            "Import-Module \"$pwd\\bin\\WinGet.psm1\"",
            "$Manifest = Get-WinGetManifest -Id '123.123pan'",
            "$version  = $Manifest.PackageVersion",
            "$url      = $Manifest.Installers.InstallerUrl",
            "return \"$version=====$url\""
        ],
        "regex": "(.*)=====(?<url>.*)"
    },
    "autoupdate": {
        "url": "$matchUrl#/dl.7z"
    }
}
