{
    "version": "3.0.6",
    "homepage": "https://pot-app.com/",
    "description": "一个跨平台的划词翻译和OCR软件",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/pot-app/pot-desktop/releases/download/3.0.6/pot_3.0.6_x64-setup.exe#/dl.7z",
            "hash": "d520a90709ac20fb4e309b9fbb7ffaa76194a78d819faabd1a90db1d1a4acfbd"
        },
        "32bit": {
            "url": "https://github.com/pot-app/pot-desktop/releases/download/3.0.6/pot_3.0.6_x86-setup.exe#/dl.7z",
            "hash": "9261184e46eba473e0db5770c1a7256fdfe760458bae8aefb5f3c9a3715b7f76"
        }
    },
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Confirm-Action",
        "Stop-App",
        "Write-Host (\"\nDeleting $env:LOCALAPPDATA\\com.pot-app.desktop ... \") -f DarkGray -NoNewline",
        "Remove-Item \"$env:LOCALAPPDATA\\com.pot-app.desktop\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Write-Host (\"\nDeleting $env:APPDATA\\com.pot-app.desktop ... \") -f DarkGray -NoNewline",
        "Remove-Item \"$env:APPDATA\\com.pot-app.desktop\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null"

    ],
    "bin": "pot.exe",
    "shortcuts": [
        [
            "pot.exe",
            "Pot"
        ]
    ],
    "persist": "config.toml",
    "checkver": {
        "github": "https://github.com/pot-app/pot-desktop"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pot-app/pot-desktop/releases/download/$version/pot_$version_x64-setup.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://github.com/pot-app/pot-desktop/releases/download/$version/pot_$version_x86-setup.exe#/dl.7z"
            }
        }
    },
    "notes": "You may need to install Edge WebView2 Runtime to use Pot."
}
