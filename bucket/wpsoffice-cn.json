    "hash": "41558248ac0be69daf4fb17e13ec53acfd7a2ebbe2004c72a0a18d16b8c0b92e",
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$_11_\\`$EXEFILE\" -Switches '-t#'",
        "Move-Item \"$dir\\`$_11_\\*.7z\" $dir",
        "Remove-Item \"$dir\\*\" -Exclude '4.7z','2.7z' -Recurse",
        "Expand-7zipArchive \"$dir\\4.7z\" -ExtractDir 'office6' -Removal",
        "Expand-7zipArchive \"$dir\\2.7z\" -ExtractDir 'CONTROL\\office6' -Overwrite 'All' -Removal"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Confirm-Action",
        "Stop-App",
        "Write-Host (\"
Deleting $env:APPDATA\\Kingsoft ... \") -f DarkGray -NoNewline",
        "Write-Host (\"
Deleting $env:LOCALAPPDATA\\kingsoft ... \") -f DarkGray -NoNewline",
        "Remove-Item \"$env:APPDATA\\Kingsoft\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null",
        "Remove-Item \"$env:LOCALAPPDATA\\kingsoft\" -Force -Recurse -ErrorAction SilentlyContinue | Out-Null"
    ],
    "bin": "wpsoffice.exe",
    "shortcuts": [
        [
            "wpsoffice.exe",
            "WPS Office"
        ]
    ],
    "checkver": {
        "url": "https://www.wps.cn/platformUrls",
        "jsonpath": "$.productDetail.productVcode"
    },
    "autoupdate": {
        "url": "https://official-package.wpscdn.cn/wps/download/WPS_Setup_$buildVersion.exe#/dl.7z"
    },
    "notes": "Scoop can't persist data of this application."
